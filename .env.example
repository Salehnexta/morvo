# ========================================
# Morvo AI Marketing Platform - Environment Configuration
# For Railway Deployment with MCP, Supabase, and Zapier Integration
# ========================================

# === Core API Configuration ===
MORVO_API_KEY=your-secure-morvo-api-key-here
PORT=8000
LOG_LEVEL=info
PYTHONPATH=/app
PYTHONUNBUFFERED=1

# === AI/LLM API Keys ===
OPENAI_API_KEY=your-openai-api-key-here
SERPER_API_KEY=your-serper-api-key-here  # For Perplexity AI research

# === Supabase Backend Configuration ===
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# === MCP (Model Context Protocol) Configuration ===
MCP_SERVER_URL=your-mcp-server-url
MCP_API_KEY=your-mcp-api-key
MCP_CONTEXT_WINDOW=32000

# === Social Media APIs ===
# Facebook/Instagram Graph API
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Twitter API v2
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# LinkedIn API
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# TikTok API
TIKTOK_ACCESS_TOKEN=your-tiktok-access-token
TIKTOK_APP_ID=your-tiktok-app-id

# YouTube Data API
YOUTUBE_API_KEY=your-youtube-api-key

# === Analytics & Advertising APIs ===
# Google Analytics 4
GOOGLE_ANALYTICS_CREDENTIALS=base64-encoded-service-account-json
GOOGLE_ANALYTICS_PROPERTY_ID=your-ga4-property-id

# Google Ads API
GOOGLE_ADS_DEVELOPER_TOKEN=your-google-ads-developer-token
GOOGLE_ADS_CLIENT_ID=your-google-ads-client-id
GOOGLE_ADS_CLIENT_SECRET=your-google-ads-client-secret
GOOGLE_ADS_REFRESH_TOKEN=your-google-ads-refresh-token

# Facebook Ads API
FACEBOOK_ADS_ACCESS_TOKEN=your-facebook-ads-access-token
FACEBOOK_ADS_ACCOUNT_ID=your-facebook-ads-account-id

# Google Search Console API
GOOGLE_SEARCH_CONSOLE_CREDENTIALS=base64-encoded-service-account-json

# === Business Intelligence APIs ===
# SEMrush API
SEMRUSH_API_KEY=your-semrush-api-key

# Ahrefs API
AHREFS_API_KEY=your-ahrefs-api-key

# SimilarWeb API
SIMILARWEB_API_KEY=your-similarweb-api-key

# Brand24 API
BRAND24_API_KEY=your-brand24-api-key

# === Automation & Integration APIs ===
# Zapier Webhooks
ZAPIER_WEBHOOK_URL=your-zapier-webhook-url
ZAPIER_API_KEY=your-zapier-api-key

# Make (Integromat) Webhooks
MAKE_WEBHOOK_URL=your-make-webhook-url
MAKE_API_KEY=your-make-api-key

# IFTTT Webhooks
IFTTT_WEBHOOK_KEY=your-ifttt-webhook-key

# === Railway Platform Configuration ===
# These are automatically set by Railway
# RAILWAY_STATIC_URL=
# RAILWAY_ENVIRONMENT=
# RAILWAY_PROJECT_ID=
# RAILWAY_SERVICE_ID=

# === Development/Testing Configuration ===
# Database Configuration (for local development)
DATABASE_URL=postgresql://postgres:password@localhost:5432/morvo_marketing

# Redis Configuration (for caching and background tasks)
REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# === Agent Configuration ===
# Default language and locale for M1-M5 agents
DEFAULT_LANGUAGE=ar
DEFAULT_LOCALE=sa-SA
DEFAULT_TIMEZONE=Asia/Riyadh

# Agent response limits
MAX_RESPONSE_LENGTH=10000
MAX_EXECUTION_TIME=300  # seconds

# === Security Configuration ===
# CORS origins (for production)
ALLOWED_ORIGINS=https://your-morvo-frontend.railway.app,https://your-custom-domain.com

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Session configuration
SESSION_SECRET_KEY=your-secure-session-secret
JWT_SECRET_KEY=your-jwt-secret-key

# === File Storage Configuration ===
# For storing agent results and reports
STORAGE_PROVIDER=supabase  # Options: local, supabase, s3
STORAGE_BUCKET=morvo-marketing-results
STORAGE_PUBLIC_URL=https://your-supabase-bucket-url.com
