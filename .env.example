# Essential Environment Variables for Morvo AI
# متغيرات البيئة الأساسية لـ Morvo AI

# ===== REQUIRED =====
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration  
PORT=8000
HOST=0.0.0.0
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "https://your-frontend-domain.com"]

# Database Configuration (Optional)
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_anon_key
DATABASE_URL=postgresql://user:password@localhost:5432/morvo

# Cache Configuration (Optional)
REDIS_URL=redis://localhost:6379/0

# Marketing APIs - سيتم تفعيلها الأسبوع القادم
# SE Ranking API (Business Plan - $259/month + Trends $119/month)
SERANKING_API_KEY=your_seranking_api_key

# Awario API (Enterprise Plan - $399/month) 
AWARIO_API_KEY=your_awario_api_key
AWARIO_WEBHOOK_URL=https://your-domain.com/webhooks/awario

# Mention API (Pro Plus Plan - $179/month)
MENTION_API_KEY=your_mention_api_key
MENTION_ACCOUNT_ID=your_mention_account_id

# API Rate Limiting
API_RATE_LIMIT=100
API_CACHE_TTL=3600

# Development Mode
DEBUG=False
